<div class="main main-raised">
    <div class="section">
        <div class="container">
            <form class="form-horizontal" role="form" action="/signup-submit" method="post">
                <h2>Registration Form</h2>
                <div class="form-group">
                    <label for="name-form-input">Name</label>
                    <input type="text" class="form-control" id="name-form-input" name="name" placeholder="John Doe">
                </div>
                <div class="form-group">
                    <label for="img-form-input">Image URL</label>
                    <input type="text" class="form-control" id="img-form-input" name="img_url" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <label for="title-form-input">Title/Headline</label>
                    <input type="text" class="form-control" id="title-form-input" name="title" placeholder="Backend Web Developer">
                </div>
                <div class="form-group">
                    <label for="">About You</label>
                    <textarea class="form-control" name="about" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="lin-url-form-input">LinkedIn Profile URL</label>
                    <input type="text" class="form-control" id="lin-url-form-input" name="linkedin_url" placeholder="LinkedIn Profile URL">
                </div>
                <div class="form-group">
                    <label for="github-url-form-input">Github Profile URL</label>
                    <input type="text" class="form-control" id="github-url-form-input" name="github_url" placeholder="Github Profile URL">
                </div>
                <div class="form-group">
                    <label for="pers-url-form-input">Personal Portfolio URL</label>
                    <input type="text" class="form-control" id="pers-url-form-input" name="personal_url" placeholder="Personal Portfolio URL">
                </div>

                <div class="col-md-6">
                    <h3>Frontend Skills</h3>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="html">
                            HTML
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="css">
                            CSS
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="javascript">
                            Javascript
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="ajax">
                            AJAX
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="jquery">
                            jQuery
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="bootstrap">
                            Bootstrap
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="react">
                            React.js
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="angular">
                            Angular.js
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <h3>Backend Skills</h3>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="mysql">
                            MySQL
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="node">
                            Node.js
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="php">
                            PHP
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="express">
                            Express.js
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="mongodb">
                            MongoDB
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="check-java">
                            Java
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="python">
                            Python
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="ruby">
                            Ruby
                        </label>
                    </div>
                </div>
                <button type="submit" name="button" class="btn btn-info">Create Profile</button>
            </form>
            <!-- /form -->
        </div>
        <!-- ./container -->
    </div>
</div>
